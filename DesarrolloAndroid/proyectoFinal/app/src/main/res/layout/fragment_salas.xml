<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reservas.ReservasFragment">

    <TextView
        android:id="@+id/textSalas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/text_primerasala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Cerromulera - Centro Scout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/sala1"
        app:layout_constraintTop_toBottomOf="@+id/text_primerasala"
        tools:layout_editor_absoluteX="8dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:text="TextView"


        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="13dp" />

    <TableLayout
        android:layout_width="398dp"
        android:layout_height="92dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TextView
        android:id="@+id/text_segundasala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Navaleno - Acampada virgen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />



    <ImageView
        android:id="@+id/imageSala2"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/sala2"
        app:layout_constraintTop_toBottomOf="@+id/text_segundasala"
        tools:layout_editor_absoluteX="8dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textSala2"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/imageSala2"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/textSala3"
        android:layout_width="384dp"
        android:layout_height="19dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/textSala2"
        tools:layout_editor_absoluteX="13dp" />

    <TableLayout
        android:layout_width="398dp"
        android:layout_height="92dp"
        app:layout_constraintTop_toBottomOf="@+id/textSala3"
        tools:layout_editor_absoluteX="6dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>